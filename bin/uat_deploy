#!/bin/sh

deploy() {
  IMG_REPO="$ECR_ENDPOINT/laa-apply-for-legal-aid/check-financial-eligibility-service"
  RELEASE_NAME=$(echo $CIRCLE_BRANCH | tr '[:upper:]' '[:lower:]' | sed 's:^\w*\/::' | tr -s ' _/[]().' '-' | cut -c1-30 | sed 's/-$//')
  RELEASE_HOST="$RELEASE_NAME-check-financial-uat.cloud-platform.service.justice.gov.uk"
  IDENTIFIER="$RELEASE_NAME-check-financial-check-financial-eligibility-uat-green"

  echo "Deploying CIRCLE_SHA1: $CIRCLE_SHA1 under release name: '$RELEASE_NAME'..."

  helm upgrade $RELEASE_NAME ./deploy/helm/. \
                --install --wait \
                --namespace=${K8S_NAMESPACE_UAT_LIVE} \
                --values ./deploy/helm/values-uat.yaml \
                --set deploy.host="$RELEASE_HOST" \
                --set image.repository="$IMG_REPO" \
                --set image.tag="$CIRCLE_SHA1" \
                --set ingress.hosts="{$RELEASE_HOST}" \
                --set ingress.annotations."external-dns\.alpha\.kubernetes\.io/set-identifier"="$IDENTIFIER"
}

deploy
