{
  "id": "file://public/schemas/capital.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Legal Aid Check Financial Eligibility add capital details to an assessment schema",
  "type": "object",
  "properties": {
    "bank_accounts": {
      "description": "Describes the name of the bank account and the lowest balance during the computation period",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "description": "The name of the bank account",
            "type": "string"
          },
          "value": {
            "$ref": "<%= "file://#{@schema_dir}/common.json#currency" %>"
          },
          "subject_matter_of_dispute": {
            "description": "Whether the contents of this bank account are the subject of a dispute",
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "description",
          "value"
        ]
      }
    },
    "non_liquid_capital": {
      "description": "An array of objects describing applicant's non-liquid capital items (excluding property), e.g. valuable items, jewellery, trusts, other investments",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "description": "Definition of a liquid or non-liquid capital item",
            "type": "string"
          },
          "value": {
            "$ref": "<%= "file://#{@schema_dir}/common.json#positive_currency" %>"
          },
          "subject_matter_of_dispute": {
            "description": "Whether the item is the subject of a dispute",
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "description",
          "value"
        ]
      }
    }
  }
}
