{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "<%= "file://#{@schema_dir}/applicant.json" %>",
  "type": "object",
  "required": [
    "applicant"
  ],
  "properties": {
    "applicant": {
      "type": "object",
      "properties": {
        "date_of_birth": {
          "$ref": "<%= "file://#{@schema_dir}/common.json#date" %>"
        },
        "involvement_type": { "enum": ["applicant"] },
        "has_partner_opponent": {
          "type": "boolean"
        },
        "receives_qualifying_benefit": {
          "enum": [
            "yes",
            "no"
          ]
        }
      },
      "required": [
        "date_of_birth",
        "involvement_type",
        "has_partner_opponent",
        "receives_qualifying_benefit"
      ]
    }
  }
}
