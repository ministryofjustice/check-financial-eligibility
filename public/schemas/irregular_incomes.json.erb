{
  "id": "file://public/schemas/irregular_incomes.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Legal Aid Check Financial Eligibility add irregular income to an assessment schema",
  "type": "object",
  "properties": {
    "payments": {
      "description": "Describes irregular payments received by applicant",
      "type": "array",
      "minItems": 0,
      "maxItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "income_type": {
            "enum": [
              "student_loan",
              "unspecified_source_income"
            ]
          },
          "frequency": {
            "enum": [
              "annual",
              "quarterly"
            ]
          },
          "amount": {
            "$ref": "<%= "file://#{@schema_dir}/common.json#currency" %>"
          }
        },
        "required": ["income_type", "frequency", "amount"],
        "additionalProperties": false
      }
    }
  }
}




